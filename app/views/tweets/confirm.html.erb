<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<%= form_for(@tweet) do |f| %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :image %>
  <%= f.hidden_field :content %>

　<p><%= @tweet.title %></p>
　<p><%= image_tag @tweet.image.url %></p>
  <p><%= @tweet.content %></p>
  <%= f.submit "投稿する！", class: 'btn btn-primary btn-block' %>
<% end %>

<%= form_for(@tweet, url: tweets_path, method: 'get') do |f| %>
<%= f.hidden_field :title %>
<%= f.hidden_field :image %>
<%= f.hidden_field :content %>
  <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
<% end %>
 </div>
</div>
