<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p class="flash"><%= notice %><%= alert %></p>
<%= form_for(@tweet) do |f| %>
  <%= f.error_messages! %>

  <%= f.label :タイトル %>
  <%= f.text_field :title, class: 'form-control'%>
　<br>
  <%= f.label :画像 %>
  <%= f.file_field :image %>
　<br>
  <%= f.label :内容 %>
  <%= f.text_field :content, class: 'form-control'%>
  <br>
  <%= f.submit '投稿する', class: 'btn btn-primary btn-block'%>

  <% @tweets.each do |tweet| %>
  <div class="row">
    <%= link_to tweet_path(tweet) do %>
    <h4><strong><%= tweet.title %></strong></h4>
    <% end %>
    <p><%= image_tag tweet.image.url, :size => "250x200" %></p>
    <p><%= tweet.content %></p>

    <%= link_to "編集", edit_tweet_path(tweet.id), class: 'btn btn-default btn-sm btn-success' %>
    <%= link_to "削除", tweet_path(tweet.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
    <% user = User.find(tweet.user_id) %>
    <p>投稿者:<%= user.name %></p>
   </div>
   <% end %>
<% end %>
</div>
</div>
